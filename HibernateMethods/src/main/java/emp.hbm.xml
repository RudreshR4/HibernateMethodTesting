<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
<!--  which class  which table fields  columns-->
   <class name = "com.scp.demo.HibernateMethods.Employee" table = "EMPLOYEE_INFO">
      <id name = "empId" type = "int" column = "emp_id"></id>
      <property name = "empName" column = "emp_name" type = "string"/>
      <property name = "empAge" column = "emp_age" type = "int"/>
   </class>
</hibernate-mapping>
